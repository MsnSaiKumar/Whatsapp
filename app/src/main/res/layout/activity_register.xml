<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">




        <ImageView
            android:id="@+id/id_logo_reg"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/signup_photo"
            />




        <EditText
            android:id="@+id/id_email_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/inputs"
            android:drawableLeft="@drawable/email"
            android:layout_below="@id/id_logo_reg"
            android:hint="Enter Email"
            android:inputType="textEmailAddress"
            android:padding="4dp"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/id_pass_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_email_reg"
            android:background="@drawable/inputs"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/password"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:padding="4dp"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/id_create_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/id_pass_reg"
            android:background="@drawable/button"
            android:text="Create Account"
            android:padding="4dp"
            android:shadowColor="@android:color/darker_gray"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/black" />


        <TextView
            android:id="@+id/already_account"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_below="@id/id_create_reg"
            android:text="Already have an Account?" />




    </RelativeLayout>